{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2022",           // Modern JS output
    "module": "NodeNext",         // Handles modern ESM/CJS interop
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,      // Essential for importing CJS into ESM and vice-versa
    "skipLibCheck": true,         // Prevents errors from poorly typed node_modules
    "allowJs": true,
    "strict": true,
    "removeComments": true,
    "lib": ["ES2022"]
  },
  "include": ["src/**/*.ts"]
}
